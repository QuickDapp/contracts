{
  "name": "@quickdapp/contracts",
  "version": "1.3.0",
  "description": "Companion smart contracts template package for QuickDapp web3 starter template.",
  "license": "MIT",
  "files": [
    "build",
    "README.md",
    "LICENSE.md",
    "CHANGELOG.md",
    "package.json",
    "pnpm-lock.yaml"
  ],
  "exports": "./build/index.js",
  "types": "./build/index.d.ts",
  "scripts": {
    "setup": "git submodule update --init --recursive && foundryup && husky install",
    "prettify": "prettier --write .",
    "devnet": "anvil --chain-id 1337 --block-time 5",
    "clean": "forge clean",
    "test": "forge test -vv",
    "test-cov": "forge coverage -vv",
    "build": "gemforge build && tsc",
    "dep": "gemforge deploy"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@types/node": "^18.16.16",
    "dotenv": "^16.3.1",
    "execa": "^8.0.1",
    "gemforge": "^2.6.4",
    "husky": "^8.0.2",
    "prettier": "^2.8.8",
    "solc": "^0.8.21",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.21",
    "solidity-docgen": "^0.5.17",
    "typescript": "^5.3.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "engineStrict": true,
  "dependencies": {
    "abitype": "^0.10.2"
  }
}
